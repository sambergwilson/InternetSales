@model InternetSalesViewModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1>Customer Information</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="InternetSales" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Customer
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Business Owner</th>
        <th>Business Name</th>
        <th>Business Address</th>
        <th>Phone Number</th>
        <th>Internet</th>
        <th>Landline</th>
        <th>Mobile</th>
        <th>Tv Service</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.CustomerList.OrderBy(x => x.BusinessName))
        {
            <tr>
                <td>@item.BusinessOwner</td>
                <td>@item.BusinessName</td>
                <td>@item.BusinessAddress</td>
                <td>@item.PhoneNumber</td>
                <td>@item.PurchasedInternet</td>
                <td>@item.PurchasedPhone</td>
                <td>@item.PurchasedCellService</td>
                <td>@item.TvService</td>
                <td>
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="InternetSales" asp-action="Edit" asp-route-Id="@item.CustomerId" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i>Edit
                        </a>
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="InternetSales" asp-action="Delete" class="btn btn-outline-secondary mx-1">
                                    <i class="bi bi-trash3"></i>Delete
                                </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>